<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddingCosts"
    android:orientation="vertical"
    android:background="@color/green_bg">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33">

        <ImageButton
            android:id="@+id/road_cost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:src="@drawable/transport"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_margin="12dp"/>


        <ImageButton
            android:id="@+id/food_cost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/food"
            android:layout_margin="12dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33">


        <ImageButton
            android:id="@+id/cigarate_cost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/cig1"
            android:layout_margin="12dp"/>


        <ImageButton
            android:id="@+id/mobile_bill_cost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:src="@drawable/download"
            android:scaleType="centerInside"
            android:background="@null"
            android:layout_margin="12dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33">


        <ImageButton
            android:id="@+id/unknown_cost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:src="@drawable/procssing"
            android:scaleType="centerInside"
            android:background="@null"
            android:layout_margin="12dp"/>


        <ImageButton
            android:id="@+id/other_cost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:src="@drawable/other"
            android:scaleType="centerInside"
            android:background="@null"
            android:layout_margin="12dp"/>

    </LinearLayout>



</LinearLayout>